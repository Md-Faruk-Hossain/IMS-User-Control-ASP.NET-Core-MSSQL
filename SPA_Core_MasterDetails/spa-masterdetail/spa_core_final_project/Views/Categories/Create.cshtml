@model spa_core_final_project.Models.Category

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col">
        <form id="CategoryAddForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h2>Add New Category</h2>
            <div class="form-group row mb-2">
                <label asp-for="CategoryName" class="col-form-label col-2"></label>
                <div class="col-6">
                    <input asp-for="CategoryName" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-10 offset-2">
                    <button type="submit" data-category="CRUD" class="btn btn-primary" id="btnCategoryAddFormSubmit" data-href="@Url.Action("Create","Categories")"><i class="fa fa-save"></i> Save</button>
                    <div id="msg-CreateCategory"></div>
                </div>
            </div>
</form>
    </div>
</div>