@model spa_core_final_project.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col">
        <form id="CategoriesEditForm">
            <input type="hidden" asp-for="CategoryId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h2>Update Category</h2>
            <div class="form-group row mb-2">
                <label asp-for="CategoryName" class="col-form-label col-2"></label>
                <div class="col-6">
                    <input asp-for="CategoryName" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-10 offset-2">
                    <button type="submit" data-category="CRUD" id="btnCategoryEditFormSubmit" data-href="@Url.Action("Edit","Categories")" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                    <div id="msg-EditCategory"></div>
                </div>
            </div>
        </form>
    </div>
</div>
