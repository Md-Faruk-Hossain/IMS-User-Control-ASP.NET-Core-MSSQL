
@{
    ViewData["Title"] = "Index";
}

<h1 class="alert alert-info">Role Management</h1>
<div class="row">
    <h2 class="text-primary text-center">@ViewBag.msg</h2>
</div>
<div class="row">
    <div class="col-6">
        <form asp-action="CreateRole" asp-controller="Role" method="post">
            <label class="col-form-label">Role Name</label>
            <input type="text" name="userrole" value="" class="form-control" placeholder="Please type role name" />
            <button type="submit" class="btn btn-primary btn-sm">Create Roll</button>
        </form>
    </div>
</div>