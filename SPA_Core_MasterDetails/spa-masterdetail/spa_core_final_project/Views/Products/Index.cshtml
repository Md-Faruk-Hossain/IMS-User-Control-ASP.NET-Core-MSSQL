@model IEnumerable<spa_core_final_project.Models.Product>
@using spa_core_final_project.Models
@{
    ViewData["Title"] = "Index";
    List<OrderDetail> orderDetails = ViewBag.orderDetails;
}


<div class="row">
    <div class="col">
        <div class="d-flex justify-content-between">
            <h3>Product List</h3>
            <a href="@Url.Action("Create","Products")" id="BtnAddNewProduct" data-type="loadpage" class="btn btn-outline-primary btn-sm mb-2 mr-2">Add New</a>
        </div>
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Sku</th>
                        <th>Entry Date</th>
                        <th>Picture</th>
                        <th>Stock</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        bool foreignKey = orderDetails.Where(x => x.ProductId == item.ProductId).Count() > 0;
                        <tr>
                            <td>@Html.DisplayFor(x => item.ProductName)</td>
                            <td>@Html.DisplayFor(x => item.Category.CategoryName)</td>
                            <td>@Html.DisplayFor(x => item.Price)</td>
                            <td>@Html.DisplayFor(x => item.SKUCode)</td>
                            <td>@Html.DisplayFor(x => item.EntryDate)</td>
                            <td>
                                <img src="@Url.Content(item.PicturePath)" width="32" height="32" />
                            </td>
                            <td>@Html.DisplayFor(x => item.InStock)</td>
                            <td>
                                <a href="@Url.Action("Edit","Products",new { id=item.ProductId})" id="BtnEditProduct" data-type="loadpage" class="btn btn-outline-success btn-sm"><i class="fa fa-edit"></i> Edit</a>
                                <a href="@Url.Action("Delete","Products",new { id=item.ProductId})" id="BtnDeleteProduct" data-type="loadpage" class="btn btn-outline-danger btn-sm toyDelete @((foreignKey) ? "disabled" : "")"><i class="fa fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">No product found !</div>
        }
    </div>
</div>

