@model spa_core_final_project.Models.Order

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col">
        <form id="OrderAddForm">
            <h2>Add New Order</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row mb-2">
                <label asp-for="Customer" class="col-form-label col-2"></label>
                    <div class="col-6">
                    <select asp-for="Customer.CustomerId" asp-items="ViewBag.customers" class="form-control">
                        <option selected>---Select---</option>
                    </select>
                    </div>
                    <div class="col-4">
                    <span asp-validation-for="Customer.CustomerId" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div id="SingleProductSection" class="mb-2">
                    @{
                    await Html.RenderPartialAsync("~/Views/Orders/SingleProductEntry.cshtml");
                    }
                </div>

                <div class="mb-2 d-flex justify-content-end">
                    <button id="AddSingleProduct" class="btn btn btn-primary" type="button">+</button>
                </div>

                <div class="form-group row">
                    <div class="col-10">
                    <button type="submit" data-category="CRUD" id="btnOrderCreateFormSubmit" data-href="@Url.Action("Create","Orders")" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                    </div>
                </div>
        </form>
    </div>
</div>