@model spa_core_final_project.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col">
        <form id="CustomersEditForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />

            <h2>Update Customer</h2>
            <div class="form-group row mb-2">
                <label asp-for="CustomerName" class="col-form-label col-2"></label>
                <div class="col-6">
                    <input asp-for="CustomerName" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row row mb-2">
                <label asp-for="CustomerAddress" class="col-form-label col-2"></label>
                <div class="col-6">
                    <input asp-for="CustomerAddress" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-10 offset-2">
                    <button type="submit" data-category="CRUD" id="btnCustomerEditFormSubmit" data-href="@Url.Action("Edit","Customers")" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                    <div id="msg-EditCustomer"></div>
                </div>
            </div>
        </form>
    </div>
</div>
